<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.mit.annotation.mapper.BoardMapper">

    <!-- tb_post 테이블 전체 컬럼 -->
    <sql id="postColumns">
        bno
        , title
        , content
        , writer
        , view_cnt
        , created_date
        , modified_date
    </sql>


    <!-- 게시글 저장 -->
    <insert id="save" useGeneratedKeys="true" keyProperty="bno">
        INSERT INTO tb_post (
        <include refid="postColumns" />
        ) VALUES (
        #{bno}
        , #{title}
        , #{content}
        , #{writer}
        , 0
        , now()
        , null
        )
    </insert>


    <!-- 게시글 상세정보 조회 -->
    <select id="findById">
        SELECT
        <include refid="postColumns" />
        FROM
        tb_post
        WHERE
        bno = #{bno}
    </select>


    <!-- 게시글 수정 -->
    <update id="update">
        UPDATE tb_post
        SET
        modified_date = NOW()
        , title = #{title}
        , content = #{content}
        , writer = #{writer}
        WHERE
        bno = #{bno}
    </update>


    <!-- 게시글 삭제 -->
    <delete id="deleteById">
        DELETE FROM tb_post
        WHERE
        bno = #{bno}
    </delete>


    <!-- 게시글 리스트 조회 -->
    <select id="findAll" resultType="edu.mit.annotation.realdto.BoardResponse">
        SELECT
        <include refid="postColumns" />
        FROM
        tb_post
        ORDER BY
        bno DESC
    </select>

    <update id="addcount">
        UPDATE tb_post
        SET view_cnt = view_cnt + 1
        WHERE bno = #{bno};
    </update>

</mapper>